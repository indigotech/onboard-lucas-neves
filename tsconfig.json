{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016", "esnext.asynciterable"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@core": ["./core"],
      "@core/*": ["./core/*"],
      "@data": ["./data"],
      "@data/*": ["./data/*"],
      "@domain": ["./domain"],
      "@domain/*": ["./domain/*"],
      "@graphql": ["./api/graphql"],
      "@graphql/*": ["./api/graphql/*"],
      "@test": ["./test"],
      "@test/*": ["./test/*"]
    }
  },
  "exclude": [
    "scripts/",
    "ormconfig.ts",
    "node_modules",
    "dist",
    "coverage",
    "dangerfile.ts",
    "*.test.ts",
    "tsconfig-paths-dist.js",
    "prod_node_modules"
  ]
}
